<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Expense Name -->
    <TextView
        android:id="@+id/expenseNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Expense Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/expenseAmountTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Expense Amount -->
    <TextView
        android:id="@+id/expenseAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="16sp"
        android:textColor="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/expenseNameTextView" />

    <!-- Expense Date -->
    <TextView
        android:id="@+id/expenseDateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2024-01-01"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/expenseNameTextView"
        app:layout_constraintTop_toBottomOf="@id/expenseNameTextView"
        app:layout_constraintEnd_toEndOf="@id/expenseNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
